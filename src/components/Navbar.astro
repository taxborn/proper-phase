---

const home_active = Astro.url.pathname === '/';
const about_active = Astro.url.pathname === '/about';
const projects_active = Astro.url.pathname === '/projects';
const notes_active = Astro.url.pathname === '/notes'; // TODO: Check if the URL *starts* with '/notes' since that's the base URI
---

<nav>
    <ul class="flex flex-row md:flex-col justify-around">
        <li><a href="/" class:list={[{active: home_active}]}>home</a></li>
        <li><a href="/about" class:list={[{active: about_active}]}>about</a></li>
        <li><a href="/projects" class:list={[{active: projects_active}]}>projects</a></li>
        <li><a href="/notes" class:list={[{active: notes_active}]}>notes</a></li>
    </ul>
</nav>

<style>
    nav {
        @apply md:w-1/4 lg:w-1/6 w-full h-auto md:h-screen md:sticky top-0 p-8;
    }

    a {
        @apply text-xl no-underline;
    }

    a.active {
        @apply text-indigo-500 hover:text-indigo-600;
    }
</style>